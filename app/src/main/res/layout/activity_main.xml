<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.efrei.signin.MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/mainToolbar"
        app:popupTheme="@style/ToolbarPopupTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimaryDark"
        app:title="@string/main_signIn_tb"
        >
    </android.support.v7.widget.Toolbar>




    <LinearLayout
        android:id="@+id/top_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tv_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="80dip"
            android:layout_marginBottom="30dip"
            android:text="@string/main_signIn_tv" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dip"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="@string/main_morning_tv"
                android:textSize="18dip"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                />
            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/btn_StartAm"
                android:layout_width="0dip"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:background="#1E88E5"
                android:text="@string/main_start_br"
                android:gravity="center"/>
            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/btn_EndAm"
                android:layout_weight="3"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:background="#1E88E5"
                android:text="@string/main_end_br"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dip"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="@string/main_afternoon_tv"
                android:textSize="18dip"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                />
            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/btn_StartPm"
                android:layout_width="0dip"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:background="#1E88E5"
                android:text="@string/main_start_br"
                android:gravity="center"/>
            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/btn_EndPm"
                android:layout_weight="3"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:background="#1E88E5"
                android:text="@string/main_end_br"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dip"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="@string/main_evening_tv"
                android:textSize="18dip"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                />
            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/btn_StartN"
                android:layout_width="0dip"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:background="#1E88E5"
                android:text="@string/main_start_br"
                android:gravity="center"/>
            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/btn_EndN"
                android:layout_weight="3"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:background="#1E88E5"
                android:text="@string/main_end_br"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </LinearLayout>



    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        fab:fab_addButtonColorNormal="@color/white"
        fab:fab_addButtonColorPressed="@color/white_pressed"
        fab:fab_addButtonPlusIconColor="@color/half_black"
        fab:fab_labelStyle="@style/menu_labels_style"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/blue"
            fab:fab_title="@string/main_askLeave_fab"
            fab:fab_icon="@drawable/holiday"
            fab:fab_colorPressed="@color/white_pressed"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/blue"
            fab:fab_title="@string/main_leaveRecord_fab"
            fab:fab_icon="@drawable/holiday_record"
            fab:fab_colorPressed="@color/white_pressed"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/blue"
            fab:fab_title="@string/main_signRecord_fab"
            fab:fab_icon="@drawable/signin"
            fab:fab_colorPressed="@color/white_pressed"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>



</RelativeLayout>
